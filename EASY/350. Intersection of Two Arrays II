# brute force version
class Solution:
    def intersect(self, nums1: List[int], nums2: List[int]) -> List[int]:
        
        final_result = []
        if len(nums1) > len(nums2):
            for i in nums2:
                if i in nums1:
                    nums1.remove(i)
                    final_result.append(i)
        else:
            for i in nums1:
                if i in nums2:
                    nums2.remove(i)
                    final_result.append(i)

        return final_result 

# smarter way
## referenceï¼šhttps://myapollo.com.tw/blog/python-counter/#google_vignette
class Solution:
    def intersect(self, nums1: List[int], nums2: List[int]) -> List[int]:
        
        if len(nums1) > len(nums2): return self.intersect(nums2, nums1)

        cnt = Counter(nums1)
        final_list = []
        for x in nums2:
            if cnt[x] > 0:
                final_list.append(x)
                cnt[x]-=1
        return final_list
