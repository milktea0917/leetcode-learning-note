class Solution:
    def getRow(self, rowIndex: int) -> List[int]:
        # initial
        final_return = [1]
        if rowIndex == 0: return final_return  
        # if rowIndex is bigger then 0's initital
        temp = [0] * rowIndex
        final_return.extend(temp)
        # main
        # Initial: r = [1, 0, 0, 0]
        # Row 1: Update positions 1 to 1
        # - r[1] = r[1] + r[0] = 0 + 1 = 1
        # - Result: [1, 1, 0, 0]
        # Row 2: Update positions 2 to 1  
        # - r[2] = r[2] + r[1] = 0 + 1 = 1
        # - r[1] = r[1] + r[0] = 1 + 1 = 2
        # - Result: [1, 2, 1, 0]
        # Row 3: Update positions 3 to 1
        # - r[3] = r[3] + r[2] = 0 + 1 = 1  
        # - r[2] = r[2] + r[1] = 1 + 2 = 3
        # - r[1] = r[1] + r[0] = 2 + 1 = 3
        # - Final: [1, 3, 3, 1]
        for i in range(1, len(final_return)):
            for j in range(i, 0, -1):
                final_return[j] = final_return[j] + final_return[j-1]
        return final_return 
