class Solution:
    def findRestaurant(self, list1: List[str], list2: List[str]) -> List[str]:
        
        list1_dict = {name: i  for i, name in enumerate(list1)}
        min_sum = float('inf')
        result = []

        for i, name in enumerate(list2):
            if name in list1_dict:
                total_index = i + list1_dict[name]
                if total_index < min_sum: # this is the key point of this problemï¼š if we get the min Index, remove all the past result  
                    min_sum = total_index
                    result = [name]
                elif  total_index == min_sum:
                    result.append(name)        

        return result
